<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">    <title>Registar Resultado - Peladas das Quintas Feiras</title>
  <link rel="stylesheet" href="/style.css?v=20250101">
  <link rel="icon" type="image/svg+xml" href="/logo.svg">
  <link rel="shortcut icon" href="/logo.svg">
</head>
<body class="main-bg">  
<%- include('partials/header', { user: user }) %>

  <main class="container">
    <div class="game-header">
      <h2 class="section-title">‚öΩ Registar Novo Resultado</h2>
      <p class="section-subtitle">Introduz os dados do jogo</p>
    </div>    <form method="POST" action="/jogos" class="game-form-compact">
      <!-- Data do Jogo -->
      <div class="game-date-card-compact">
        <label for="data">üìÖ Data do Jogo</label>
        <input type="date" id="data" name="data" required class="input-date-compact">
      </div>

      <!-- Resultado Central -->
      <div class="score-section-center">
        <h3 class="score-title">‚öΩ Resultado do Jogo</h3>
        <div class="score-inputs-center">
          <div class="score-input-group">
            <label for="equipa1_golos">üîµ Equipa 1</label>
            <input type="number" id="equipa1_golos" name="equipa1_golos" min="0" value="0" required class="input-score-center">
          </div>
          <span class="score-separator">-</span>
          <div class="score-input-group">
            <label for="equipa2_golos">üî¥ Equipa 2</label>
            <input type="number" id="equipa2_golos" name="equipa2_golos" min="0" value="0" required class="input-score-center">
          </div>
        </div>
      </div>

      <!-- Sele√ß√£o de Jogadores - Layout Compacto -->
      <div class="players-selection-compact">
        <h3 class="players-selection-title">üë• Distribui√ß√£o de Jogadores</h3>
        <p class="players-selection-subtitle">Seleciona os jogadores para cada equipa (por ordem alfab√©tica)</p>
        
        <div class="players-list-compact">
          <% if (jogadores && jogadores.length > 0) { %>
            <% 
              // Ordenar jogadores alfabeticamente
              const jogadoresOrdenados = [...jogadores].sort((a, b) => a.nome.localeCompare(b.nome));
            %>
            <% jogadoresOrdenados.forEach(jogador => { %>
              <div class="player-row-compact">
                <span class="player-name-compact"><%= jogador.nome %></span>
                <div class="player-team-selector">
                  <label class="team-option team1-option">
                    <input type="checkbox" name="equipa1" value="<%= jogador.id %>" class="team-checkbox" data-player="<%= jogador.id %>">
                    <span class="team-label">Equipa 1</span>
                  </label>
                  <label class="team-option team2-option">
                    <input type="checkbox" name="equipa2" value="<%= jogador.id %>" class="team-checkbox" data-player="<%= jogador.id %>">
                    <span class="team-label">Equipa 2</span>
                  </label>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>
      </div><div class="form-actions-modern">
        <button type="submit" class="btn btn-success">
          <span>‚úÖ</span> Registar Resultado
        </button>
        <a href="/" class="btn btn-cancel">
          <span>‚ùå</span> Cancelar
        </a>
      </div>
    </form>  </main>

  <script>
    // Prevent player from being in both teams
    document.querySelectorAll('.team-checkbox').forEach(checkbox => {
      checkbox.addEventListener('change', function() {
        if (this.checked) {
          const playerId = this.dataset.player;
          const otherTeam = this.name === 'equipa1' ? 'equipa2' : 'equipa1';
          const otherCheckbox = document.querySelector(`input[name="${otherTeam}"][data-player="${playerId}"]`);
          if (otherCheckbox) {
            otherCheckbox.checked = false;
          }
        }
      });
    });
  </script>

<%- include('partials/footer') %>
</body>
</html>