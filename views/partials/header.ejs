        <% } %>
      </li>
    </ul>
  </nav>

  <!-- User info desktop -->
  <% if (typeof user !== 'undefined' && user) { %>
    <div class="user-info hide-mobile">
      <span class="username">👤 <%= user.username %></span>
      <% if (user.role === 'admin') { %>
        <span class="user-role">Admin</span>
      <% } else { %>
        <a href="/dashboard" class="dashboard-link">📊 Dashboard</a>
      <% } %>
      <form method="POST" action="/logout" style="display: inline;">
        <button type="submit" class="logout-btn">🚪 Logout</button>
      </form>
    </div>
  <% } else { %>
    <div class="user-info hide-mobile">
      <a href="/login" class="login-btn">🔑 Login Admin</a>
    </div>
  <% } %>
</header>

<!-- Overlay para fechar menu - INLINE STYLES ABSOLUTOS -->
<div 
  id="mobileMenuOverlay" 
  style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.6); z-index: 99997; pointer-events: auto;"
></div>

<!-- Script para menu híbrido - DESKTOP + MOBILE -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  console.log('🚀 Menu híbrido - Desktop + Mobile');
  
  const toggle = document.getElementById('mobileMenuToggle');
  const menu = document.getElementById('navbarMenu');
  const overlay = document.getElementById('mobileMenuOverlay');
  const desktopNav = document.querySelector('.desktop-nav');
  const desktopUser = document.querySelector('.desktop-user');
  
  function updateLayout() {
    const isMobile = window.innerWidth <= 768;
    
    // Forçar body padding
    document.body.style.paddingTop = '65px';
    
    if (isMobile) {
      // MOBILE: Mostrar hamburger, esconder nav desktop
      if (toggle) {
        toggle.style.display = 'flex';
        toggle.style.visibility = 'visible';
      }
      if (desktopNav) desktopNav.style.display = 'none';
      if (desktopUser) desktopUser.style.display = 'none';
      
      console.log('📱 Modo mobile ativo');
    } else {
      // DESKTOP: Mostrar nav desktop, esconder hamburger
      if (toggle) {
        toggle.style.display = 'none';
        toggle.style.visibility = 'hidden';
      }
      if (desktopNav) desktopNav.style.display = 'flex';
      if (desktopUser) desktopUser.style.display = 'flex';
      
      // Fechar menu mobile se estiver aberto
      if (menu) menu.style.left = '-100%';
      if (overlay) overlay.style.display = 'none';
      
      console.log('🖥️ Modo desktop ativo');
    }
  }
  
  // Aplicar layout inicial e em resize
  updateLayout();
  window.addEventListener('resize', updateLayout);
  
  // Funcionalidade do menu mobile
  if (toggle && menu && overlay) {
    function toggleMenu() {
      const isOpen = menu.style.left === '0px';
      
      if (isOpen) {
        menu.style.left = '-100%';
        overlay.style.display = 'none';
        document.body.style.overflow = '';
        console.log('❌ Menu mobile fechado');
      } else {
        menu.style.left = '0px';
        overlay.style.display = 'block';
        document.body.style.overflow = 'hidden';
        console.log('✅ Menu mobile aberto');
      }
    }

    function closeMenu() {
      menu.style.left = '-100%';
      overlay.style.display = 'none';
      document.body.style.overflow = '';
    }

    toggle.addEventListener('click', toggleMenu);
    overlay.addEventListener('click', closeMenu);

    // Fechar menu ao clicar em qualquer link
    const navLinks = menu.querySelectorAll('a');
    navLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });
  }

  console.log('✅ Menu híbrido configurado');
});
</script>

