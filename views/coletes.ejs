<div class="coletes-header-modern">
  <h2 class="section-title">🟢🔴 Gestão de Coletes</h2>
  <p class="section-subtitle">Controlo de quem leva os coletes</p>
</div>

<!-- Nota informativa -->
<div class="info-note-modern">
  <span class="info-icon">ℹ️</span>
  <p><strong>Nota:</strong> Registos desde outubro de 2025, a ordem não está de acordo com o WhatsApp</p>
</div>

<!-- Estado actual dos coletes -->
<div class="coletes-status-modern">
  <% if (coletesActuais) { %>
    <div class="status-card current-holder">
      <div class="status-icon">👕</div>
      <div class="status-content">
        <h3>Coletes actualmente com:</h3>
        <p class="holder-name"><%= coletesActuais.jogador_nome %></p>
        <p class="holder-date">📅 Desde: <%= new Date(coletesActuais.data_levou).toLocaleDateString('pt-PT') %></p>
        
        <% if (user && user.role === 'admin') { %>
          <!-- Botão para confirmar devolução -->
          <div style="margin-top: 20px;">
            <button type="button" class="btn btn-success" onclick="document.getElementById('formDevolucao').style.display='block'; this.style.display='none';">
              ✅ Confirmar Devolução
            </button>
          </div>
          
          <!-- Formulário de devolução (inicialmente escondido) -->
          <div id="formDevolucao" style="display:none; margin-top: 20px; padding: 15px; background-color: #f0f9ff; border-radius: 8px; border: 2px solid #3b82f6;">
            <h4 style="margin-top: 0; color: #1e40af;">👤 Quem levou os coletes?</h4>
            <form method="POST" action="/coletes/confirmar">
              <div style="margin-bottom: 15px;">
                <label for="jogador_select" style="display: block; margin-bottom: 5px; font-weight: bold;">
                  Selecionar jogador:
                </label>
                <select name="jogador_id" id="jogador_select" required 
                        style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #cbd5e1; font-size: 16px;">
                  <% if (proximoConvocado) { %>
                    <option value="<%= proximoConvocado.id %>" selected>
                      🎯 <%= proximoConvocado.nome %> (Sugestão: próximo da lista)
                    </option>
                  <% } %>
                  <% 
                    const convocados = estatisticas.filter(j => j.tipo === 'convocado');
                    convocados.forEach(jogador => { 
                      if (!proximoConvocado || jogador.id !== proximoConvocado.id) { 
                  %>
                    <option value="<%= jogador.id %>">
                      <%= jogador.nome %> (Levou <%= jogador.vezes_levou %>x)
                    </option>
                  <% } 
                    }); 
                  %>
                </select>
              </div>
              <button type="submit" class="btn btn-primary" style="width: 100%;">
                🎯 Confirmar que levou os coletes
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
  <% } else { %>
    <div class="status-card no-holder">
      <div class="status-icon">❓</div>
      <div class="status-content">
        <h3>Coletes disponíveis</h3>
        <p>Ninguém tem os coletes no momento</p>
        
        <% if (user && user.role === 'admin') { %>
          <div style="margin-top: 15px;">
            <button type="button" class="btn btn-primary" onclick="document.getElementById('formAtribuir').style.display='block'; this.style.display='none';">
              👤 Atribuir Coletes
            </button>
          </div>
          
          <div id="formAtribuir" style="display:none; margin-top: 20px; padding: 15px; background-color: #f0f9ff; border-radius: 8px; border: 2px solid #3b82f6;">
            <h4 style="margin-top: 0; color: #1e40af;">👤 Quem vai levar os coletes?</h4>
            <form method="POST" action="/coletes/confirmar">
              <div style="margin-bottom: 15px;">
                <select name="jogador_id" required style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #cbd5e1; font-size: 16px;">
                  <% if (proximoConvocado) { %>
                    <option value="<%= proximoConvocado.id %>" selected>
                      🎯 <%= proximoConvocado.nome %> (Sugestão: próximo da lista)
                    </option>
                  <% } %>
                  <% 
                    const convocados = estatisticas.filter(j => j.tipo === 'convocado');
                    convocados.forEach(jogador => { 
                      if (!proximoConvocado || jogador.id !== proximoConvocado.id) { 
                  %>
                    <option value="<%= jogador.id %>">
                      <%= jogador.nome %> (Levou <%= jogador.vezes_levou %>x)
                    </option>
                  <% } 
                    }); 
                  %>
                </select>
              </div>
              <button type="submit" class="btn btn-primary" style="width: 100%;">
                🎯 Atribuir Coletes
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
  <% } %>
</div>

<!-- Lista de estatísticas -->
<div class="estatisticas-coletes">
  <h3>📊 Estatísticas de Coletes</h3>
  
  <div class="stats-grid">
    <% 
      const convocados = estatisticas.filter(j => j.tipo === 'convocado');
      convocados.forEach(jogador => { 
    %>
      <div class="stat-card <%= jogador.id === (proximoConvocado && proximoConvocado.id) ? 'next-in-line' : '' %>">
        <div class="stat-player">
          <%= jogador.nome %>
          <% if (jogador.id === (proximoConvocado && proximoConvocado.id)) { %>
            <span class="next-badge">🎯 Próximo</span>
          <% } %>
        </div>
        <div class="stat-count">
          <strong><%= jogador.vezes_levou || 0 %></strong> vezes
        </div>
      </div>
    <% }); %>
  </div>
</div>

