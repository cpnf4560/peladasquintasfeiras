<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">  
  <title>Registar Resultado - Peladas das Quintas Feiras</title>
  <link rel="stylesheet" href="/style.base.css">
  <link rel="stylesheet" href="/style.layout.css">
  <link rel="stylesheet" href="/style.tables.css">
  <link rel="stylesheet" href="/style.cards.css">
  <link rel="stylesheet" href="/style.forms.css">
  <link rel="stylesheet" href="/style.css?v=<%= Date.now() %>">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
</head>
<body class="main-bg">  
<%- include('partials/header', { user: user }) %>

    <h2 class="section-title">Registar Novo Resultado</h2>

    <form method="POST" action="/jogos" class="game-form card-visual">
      <div class="form-row">
        <div class="form-group">
          <label for="data">Data do Jogo:</label>
          <input type="date" id="data" name="data" required>
        </div>
      </div>
      <div class="teams-section">
        <div class="team-form card-visual">
          <h3>Equipa 1</h3>
          <div class="form-group">
            <label for="equipa1_golos">Golos:</label>
            <input type="number" id="equipa1_golos" name="equipa1_golos" min="0" required>
          </div>
          <div class="form-group">
            <label for="jogadores_equipa1">Jogadores:</label>
            <div class="players-selection">
              <% if (jogadores && jogadores.length > 0) { %>
                <% jogadores.forEach(jogador => { %>
                  <label class="player-checkbox">
                    <input type="checkbox" name="equipa1" value="<%= jogador.id %>">
                    <span><%= jogador.nome %></span>
                  </label>
                <% }) %>
              <% } %>
            </div>
          </div>
        </div>
        <div class="team-form card-visual">
          <h3>Equipa 2</h3>
          <div class="form-group">
            <label for="equipa2_golos">Golos:</label>
            <input type="number" id="equipa2_golos" name="equipa2_golos" min="0" required>
          </div>
          <div class="form-group">
            <label for="jogadores_equipa2">Jogadores:</label>
            <div class="players-selection">
              <% if (jogadores && jogadores.length > 0) { %>
                <% jogadores.forEach(jogador => { %>
                  <label class="player-checkbox">
                    <input type="checkbox" name="equipa2" value="<%= jogador.id %>">
                    <span><%= jogador.nome %></span>
                  </label>
                <% }) %>
              <% } %>
            </div>
          </div>
        </div>
      </div>

<%- include('partials/footer') %>
</body>
</html>