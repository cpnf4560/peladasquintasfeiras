      <a href="/admin/dashboard" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'admin' ? 'active' : '' %>" style="color: #ecf0f1; text-decoration: none; font-size: 14px; padding: 8px 12px; border-radius: 4px; transition: background 0.2s;">🔧 Admin</a>
    <% } %>
