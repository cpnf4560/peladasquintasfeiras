    <% if (typeof user !== 'undefined' && user) { %>
      <span style="color: #ecf0f1; font-size: 14px;">👤 <%= user.username %></span>
      <% if (user.role === 'admin') { %>
        <span style="color: #3498db; font-size: 12px;">Admin</span>
      <% } %>
