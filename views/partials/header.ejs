    style="display: none; visibility: hidden; z-index: 100000; position: relative; flex-direction: column; justify-content: center; align-items: center; width: 40px; height: 40px; background: transparent; border: none; padding: 8px; cursor: pointer; pointer-events: auto;"
  >
