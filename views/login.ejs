<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Admin - Peladas das Quintas Feiras</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="icon" type="image/svg+xml" href="/logo.svg">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      position: relative;
      overflow: hidden;
    }

    body::before {
      content: '';
      position: absolute;
      width: 500px;
      height: 500px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      top: -200px;
      right: -200px;
      animation: float 6s ease-in-out infinite;
    }

    body::after {
      content: '';
      position: absolute;
      width: 400px;
      height: 400px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 50%;
      bottom: -150px;
      left: -150px;
      animation: float 8s ease-in-out infinite reverse;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(20px); }
    }

    .login-container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 440px;
      padding: 3rem;
      position: relative;
      z-index: 1;
      animation: slideIn 0.5s ease;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .logo-section {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .logo-icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 1rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2.5rem;
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .logo-section h1 {
      font-size: 1.75rem;
      font-weight: 800;
      color: #1f2937;
      margin-bottom: 0.5rem;
    }

    .logo-section p {
      color: #6b7280;
      font-size: 0.95rem;
      font-weight: 500;
    }

    .error-message {
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      color: #991b1b;
      padding: 1rem 1.25rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      font-size: 0.9rem;
      font-weight: 600;
      border-left: 4px solid #dc2626;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      animation: shake 0.5s ease;
    }

    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      25% { transform: translateX(-10px); }
      75% { transform: translateX(10px); }
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.625rem;
      color: #374151;
      font-weight: 600;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .label-icon {
      font-size: 1.125rem;
    }

    .form-group input {
      width: 100%;
      padding: 0.875rem 1.125rem;
      border: 2px solid #e5e7eb;
      border-radius: 10px;
      background: #f9fafb;
      color: #1f2937;
      font-size: 1rem;
      font-weight: 500;
      transition: all 0.3s ease;
      font-family: inherit;
    }

    .form-group input:focus {
      outline: none;
      border-color: #667eea;
      background: white;
      box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
    }

    .form-group input::placeholder {
      color: #9ca3af;
    }

    .btn-login {
      width: 100%;
      padding: 1rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1.0625rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 14px rgba(102, 126, 234, 0.4);
      margin-top: 0.5rem;
    }

    .btn-login:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.5);
    }

    .btn-login:active {
      transform: translateY(0);
    }

    .back-link {
      text-align: center;
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 2px solid #f3f4f6;
    }

    .back-link a {
      color: #667eea;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.9375rem;
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .back-link a:hover {
      color: #764ba2;
      gap: 0.75rem;
    }

    @media (max-width: 480px) {
      .login-container {
        padding: 2rem 1.5rem;
      }

      .logo-section h1 {
        font-size: 1.5rem;
      }

      .logo-icon {
        width: 70px;
        height: 70px;
        font-size: 2rem;
      }
    }

    .admin-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
      border-radius: 8px;
      font-size: 0.8125rem;
      font-weight: 600;
      color: #4b5563;
      margin-bottom: 0.5rem;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="logo-section">
      <div class="logo-icon">‚öΩ</div>
      <div class="admin-badge">
        <span>üîê</span>
        <span>Acesso Restrito</span>
      </div>
      <h1>√Årea de Administra√ß√£o</h1>
      <p>Peladas das Quintas Feiras</p>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-message">
        <span style="font-size: 1.25rem;">‚ö†Ô∏è</span>
        <span><%= error %></span>
      </div>
    <% } %>

    <form method="POST" action="/login">
      <div class="form-group">
        <label for="username">
          <span class="label-icon">üë§</span>
          <span>Utilizador</span>
        </label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          placeholder="Digite o seu utilizador" 
          required 
          autofocus
        >
      </div>

      <div class="form-group">
        <label for="password">
          <span class="label-icon">üîë</span>
          <span>Palavra-passe</span>
        </label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          placeholder="Digite a sua palavra-passe" 
          required
        >
      </div>

      <button type="submit" class="btn-login">
        üöÄ Entrar no Sistema
      </button>
    </form>

    <div class="back-link">
      <a href="/">
        <span>‚Üê</span>
        <span>Voltar √† p√°gina inicial</span>
      </a>
    </div>
  </div>
</body>
</html>
